@using BOL;

@{
    ViewData["Title"] = "User Data Page";
}




<body>  
<div class="pt-5">  
  <div class="global-container">  
    <div class="card login-form">  
        <div class="card-body">  
            <h3 class="card-title text-center titleh3"> LOGIN </h3>  
            <div class="card-text">  
                <form action="/User/Login" method="post">  
                    <div class="form-group">  
                        <label for="exampleInputEmail1"> Enter Email address </label>  
                        <input type="text" class="form-control form-control-sm" id="username" name="username" aria-describedby="emailHelp">  
                    </div>  
                    <div class="form-group">  
                        <label for="exampleInputPassword1">Enter Password </label>  
                        <a href="#" style="float:right;font-size:12px;"> Forgot password? </a>  
                        <input type="password" class="form-control form-control-sm" id="password" name="password">  
                    </div>  
                    <button type="submit" class="btn btn-primary btn-block"> Sign in </button>  
                    
                    <div class="sign-up">  
                        Don't have an account? <a href="/User/Registration"> Create One </a>  
                    </div>  
                </form>  
            </div>  
        </div>  
    </div>  
</div>  
</body>  